# ── MT4 Bridge ──
MT4_BRIDGE_HOST=127.0.0.1
MT4_COMMAND_PORT=32768
MT4_DATA_PORT=32769

# ── Server ──
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ── Risk ──
LOT_PER_100=0.01
MAX_DAILY_LOSS_PCT=3.0
MAX_CONCURRENT_TRADES=3

# ── Sessions (UTC) ──
ASIAN_START=00:00
ASIAN_END=08:00
LONDON_START=07:00
LONDON_END=16:00
NY_START=12:00
NY_END=21:00

# ── Weekly Structure ──
# NO_TRADE_DAYS accepts comma-separated day numbers (0=Mon, 6=Sun)
NO_TRADE_DAYS=0,6
FRIDAY_CUTOFF_HOUR=18

# ── News Catalyst ──
FOREXFACTORY_URL=https://www.forexfactory.com/calendar
NEWS_BUFFER_MINUTES=30

# ── Trauma Filter ──
GOD_CANDLE_ATR_MULTIPLIER=3.0
TRAUMA_COOLDOWN_SECONDS=120

# ── Signature Trade ──
INDUCTION_THRESHOLD=70.0
MIN_CONFIDENCE=0.60

# ── TradingView Webhook Secret (optional) ──
# WEBHOOK_SECRET=your_secret_here
